<% include ../head %>
<div class="block">
    <div class="container">


        <form role="form" action="/monitors/add" method="post">
            <div class="form-group">
                <label for="nameInput">Name</label>
                <input type="text" class="form-control" id="nameInput" name="nameInput" placeholder="example.org pinger">
            </div>


            <div class="form-group">
                <label for="typeSelect">Check Type</label>
                <select class="form-control" id="typeSelect" name="typeSelect">
                    <option value="1">Request</option>
                    <option value="2">Ping</option>
                </select>
            </div>


            <div class="form-group">
                <label for="urlInput">URL</label>
                <input type="url" class="form-control" id="urlInput" name="urlInput" placeholder="http://example.com">

                <p class="help-block">Please use 'http://' or 'https://'</p>
            </div>
            <div class="form-group">
                <label for="rateInput">Rate input</label>

                <div class="input-group">
                    <div class="input-group-addon">Every</div>
                    <input type="number" min="5" max="1440" class="form-control" id="rateInput" name="rateInput"
                           placeholder="5">

                    <div class="input-group-addon">minutes</div>
                </div>

                <p class="help-block">How often to check the status of the site.</p>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>

    </div>
</div>

<% include ../foot %>
