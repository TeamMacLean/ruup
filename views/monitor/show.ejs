<% include ../head.ejs %>

<div class="container">

    <h1 class="center"><%- monitor.name %></h1>

    <div class="graph" id="graph"></div>

    <script src="/components/chartist/dist/chartist.min.js"></script>
    <link href="/components/chartist/dist/chartist.min.css" rel="stylesheet">
    <script>

        var graphData = JSON.parse('<%- JSON.stringify(graph) %>');


        new Chartist.Line('#graph', {
            labels: graphData.labels,
            series: [
                graphData.data
            ]
        }, {
            low: 0,
            showArea: true,
            fullWidth: true,
            showLabel: false,
            axisX: {
                showGrid: false,
                showLabel: false,
                offset: 0
            },
            axisY: {
                showGrid: false,
                showLabel: false,
                offset: 0
            }
        });


    </script>

    <div class="form-group">
        <p>Alert emails will go to <%- locals.signedInUser.mail %></p>
    </div>

    <div class="form-group">
        <img src="/site/<%- monitor.id %>/badge">
        <div>
            <label for="md-badge">Markdown Badge</label>
            <input type="text"
                   value="[![RUUP Badge](http://ruup.online/site/<%- monitor.id %>/badge)](http://ruup.online/site/<%- monitor.id %>)"
                   id="md-badge"
                   name="md-badge"
                   readonly>
        </div>
    </div>

</div>

<% include ../foot.ejs %>